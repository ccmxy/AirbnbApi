extends layout

block content
  div(class="container")
      h1 Registered Users
      ul(class="userlist")
      each user, i in users
        li
          a(href='view/#{user._id}' class='view-link') View
          a(href='edit/#{user._id}' class='edit-link') Edit

          a(href="mailto:#{user.email}")=user.username
          span - #{user.email}
          a(href='delete/#{user._id}' class='delete-link') X
      a(href='regform' class='reg-link') Register New User
